@{
    ViewBag.Title = "Read Only Page";
}

<div style="margin-left: 100px;margin-top: 50px">
    @foreach (var house in ViewBag.Houses)
    {
        <h3>@house.HouseName:  @house.Location</h3>

        <ul>
            @foreach (var person in house.People)
            {
                <li>
                    @if (!person.IsAlive)
                    {
                        <del style="color: red">@person.Name</del>
                    }
                    else
                    {
                        @person.Name
                    }
                    <ul>
                        @foreach (var pet in person.Pets)
                        {
                            <li>@pet.Name</li>
                        }
                    </ul>
                </li>
            }
        </ul>
    }
</div>

